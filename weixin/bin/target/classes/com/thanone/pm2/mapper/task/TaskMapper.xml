<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thanone.pm2.mapper.task.TaskMapper">
	
	<!-- <cache /> -->
	
	<!-- 大于等于(&gt;=);小于等于(&lt;=); -->
	<sql id="qbuilder">
		<where>
			<if test="qbuilder.id != null">t_task.id = #{qbuilder.id}</if>
		</where>
	</sql>
	
	<select id="find" resultType="Task">
		SELECT * FROM t_task
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
		<choose>
			<when test="orderby != null">
				ORDER BY t_task.${orderby}
			</when>
			<otherwise>
				ORDER BY t_task.id
			</otherwise>
		</choose>
		<choose>
			<when test="start != null and size != null">
				LIMIT #{start},#{size}
			</when> 
			<when test="start == null and size != null">
				LIMIT #{size}
			</when> 
		</choose>
	</select>
	
	<select id="getTotalRows" resultType="int">
		SELECT COUNT(*) FROM t_task
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
	</select>
	
	<select id="findById" resultType="Task">
		SELECT * FROM t_task WHERE id = #{id}
	</select>
	
	<insert id="insert">
		INSERT INTO t_task
			(id,pid,name,user,state,timePre,timeReal,ctime,utime)
		VALUES
			(#{object.id},#{object.pid},#{object.name},#{object.user},#{object.state},#{object.timePre},#{object.timeReal},now(),now())
	</insert>
	
	<update id="update">
		UPDATE t_task
		SET
			pid = #{object.pid},
			name = #{object.name},
			user = #{object.user},
			state = #{object.state},
			timePre = #{object.timePre},
			timeReal = #{object.timeReal},
			utime = now()
		WHERE id = #{object.id}
	</update>
	
	<delete id="delete">
		DELETE FROM t_task WHERE id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM t_task WHERE id in 
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="cleanTable">
		DELETE FROM t_task
	</delete>

</mapper>
