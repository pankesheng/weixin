<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thanone.pm2.mapper.task.RemarkMapper">
	
	<!-- <cache /> -->
	
	<!-- 大于等于(&gt;=);小于等于(&lt;=); -->
	<sql id="qbuilder">
		<where>
			<if test="qbuilder.id != null">t_remark.id = #{qbuilder.id}</if>
		</where>
	</sql>
	
	<select id="find" resultType="Remark">
		SELECT * FROM t_remark
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
		<choose>
			<when test="orderby != null">
				ORDER BY t_remark.${orderby}
			</when>
			<otherwise>
				ORDER BY t_remark.id
			</otherwise>
		</choose>
		<choose>
			<when test="start != null and size != null">
				LIMIT #{start},#{size}
			</when> 
			<when test="start == null and size != null">
				LIMIT #{size}
			</when> 
		</choose>
	</select>
	
	<select id="getTotalRows" resultType="int">
		SELECT COUNT(*) FROM t_remark
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
	</select>
	
	<select id="findById" resultType="Remark">
		SELECT * FROM t_remark WHERE id = #{id}
	</select>
	
	<insert id="insert">
		INSERT INTO t_remark
			(id,workId,content,ip,ctime,utime)
		VALUES
			(#{object.id},#{object.workId},#{object.content},#{object.ip},now(),now())
	</insert>
	
	<update id="update">
		UPDATE t_remark
		SET
			workId = #{object.workId},
			content = #{object.content},
			ip = #{object.ip},
			utime = now()
		WHERE id = #{object.id}
	</update>
	
	<delete id="delete">
		DELETE FROM t_remark WHERE id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM t_remark WHERE id in 
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="cleanTable">
		DELETE FROM t_remark
	</delete>

</mapper>
