<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thanone.pm2.mapper.task.TaskLogMapper">
	
	<!-- <cache /> -->
	
	<!-- 大于等于(&gt;=);小于等于(&lt;=); -->
	<sql id="qbuilder">
		<where>
			<if test="qbuilder.id != null">t_tasklog.id = #{qbuilder.id}</if>
		</where>
	</sql>
	
	<select id="find" resultType="TaskLog">
		SELECT * FROM t_tasklog
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
		<choose>
			<when test="orderby != null">
				ORDER BY t_tasklog.${orderby}
			</when>
			<otherwise>
				ORDER BY t_tasklog.id
			</otherwise>
		</choose>
		<choose>
			<when test="start != null and size != null">
				LIMIT #{start},#{size}
			</when> 
			<when test="start == null and size != null">
				LIMIT #{size}
			</when> 
		</choose>
	</select>
	
	<select id="getTotalRows" resultType="int">
		SELECT COUNT(*) FROM t_tasklog
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
	</select>
	
	<select id="findById" resultType="TaskLog">
		SELECT * FROM t_tasklog WHERE id = #{id}
	</select>
	
	<insert id="insert">
		INSERT INTO t_tasklog
			(id,taskId,ip,name,user,state,timePre,ctime,utime)
		VALUES
			(#{object.id},#{object.taskId},#{object.ip},#{object.name},#{object.user},#{object.state},#{object.timePre},now(),now())
	</insert>
	
	<update id="update">
		UPDATE t_tasklog
		SET
			taskId = #{object.taskId},
			ip = #{object.ip},
			name = #{object.name},
			user = #{object.user},
			state = #{object.state},
			timePre = #{object.timePre},
			utime = now()
		WHERE id = #{object.id}
	</update>
	
	<delete id="delete">
		DELETE FROM t_tasklog WHERE id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM t_tasklog WHERE id in 
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="cleanTable">
		DELETE FROM t_tasklog
	</delete>

</mapper>
