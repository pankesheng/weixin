<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thanone.pm2.mapper.task.WorkLogMapper">
	
	<!-- <cache /> -->
	
	<!-- 大于等于(&gt;=);小于等于(&lt;=); -->
	<sql id="qbuilder">
		<where>
			<if test="qbuilder.id != null">t_worklog.id = #{qbuilder.id}</if>
		</where>
	</sql>
	
	<select id="find" resultType="WorkLog">
		SELECT * FROM t_worklog
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
		<choose>
			<when test="orderby != null">
				ORDER BY t_worklog.${orderby}
			</when>
			<otherwise>
				ORDER BY t_worklog.id
			</otherwise>
		</choose>
		<choose>
			<when test="start != null and size != null">
				LIMIT #{start},#{size}
			</when> 
			<when test="start == null and size != null">
				LIMIT #{size}
			</when> 
		</choose>
	</select>
	
	<select id="getTotalRows" resultType="int">
		SELECT COUNT(*) FROM t_worklog
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
	</select>
	
	<select id="findById" resultType="WorkLog">
		SELECT * FROM t_worklog WHERE id = #{id}
	</select>
	
	<insert id="insert">
		INSERT INTO t_worklog
			(id,workId,ip,user,workBeginTime,workEndTime,timeReal,taskId,ctime,utime)
		VALUES
			(#{object.id},#{object.workId},#{object.ip},#{object.user},#{object.workBeginTime},#{object.workEndTime},#{object.timeReal},#{object.taskId},now(),now())
	</insert>
	
	<update id="update">
		UPDATE t_worklog
		SET
			workId = #{object.workId},
			ip = #{object.ip},
			user = #{object.user},
			workBeginTime = #{object.workBeginTime},
			workEndTime = #{object.workEndTime},
			timeReal = #{object.timeReal},
			taskId = #{object.taskId},
			utime = now()
		WHERE id = #{object.id}
	</update>
	
	<delete id="delete">
		DELETE FROM t_worklog WHERE id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM t_worklog WHERE id in 
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="cleanTable">
		DELETE FROM t_worklog
	</delete>

</mapper>
