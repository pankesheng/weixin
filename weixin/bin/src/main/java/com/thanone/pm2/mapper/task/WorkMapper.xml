<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thanone.pm2.mapper.task.WorkMapper">
	
	<!-- <cache /> -->
	
	<!-- 大于等于(&gt;=);小于等于(&lt;=); -->
	<sql id="qbuilder">
		<where>
			<if test="qbuilder.id != null">t_work.id = #{qbuilder.id}</if>
		</where>
	</sql>
	
	<select id="find" resultType="Work">
		SELECT * FROM t_work
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
		<choose>
			<when test="orderby != null">
				ORDER BY t_work.${orderby}
			</when>
			<otherwise>
				ORDER BY t_work.id
			</otherwise>
		</choose>
		<choose>
			<when test="start != null and size != null">
				LIMIT #{start},#{size}
			</when> 
			<when test="start == null and size != null">
				LIMIT #{size}
			</when> 
		</choose>
	</select>
	
	<select id="getTotalRows" resultType="int">
		SELECT COUNT(*) FROM t_work
		<if test="qbuilder != null">
			<include refid="qbuilder"/>
		</if>
	</select>
	
	<select id="findById" resultType="Work">
		SELECT * FROM t_work WHERE id = #{id}
	</select>
	
	<insert id="insert">
		INSERT INTO t_work
			(id,user,workBeginTime,workEndTime,timeReal,taskId,remark,ctime,utime)
		VALUES
			(#{object.id},#{object.user},#{object.workBeginTime},#{object.workEndTime},#{object.timeReal},#{object.taskId},#{object.remark},now(),now())
	</insert>
	
	<update id="update">
		UPDATE t_work
		SET
			user = #{object.user},
			workBeginTime = #{object.workBeginTime},
			workEndTime = #{object.workEndTime},
			timeReal = #{object.timeReal},
			taskId = #{object.taskId},
			remark = #{object.remark},
			utime = now()
		WHERE id = #{object.id}
	</update>
	
	<delete id="delete">
		DELETE FROM t_work WHERE id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM t_work WHERE id in 
		<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="cleanTable">
		DELETE FROM t_work
	</delete>

</mapper>
